{
  "compilerOptions": {
    "types": ["node"],
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"]
}

